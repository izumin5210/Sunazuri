<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="handler" type="info.izumin.android.sunazuri.presentation.fragment.WelcomeFragment.Handler" />
    </data>

    <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            tools:context="info.izumin.android.sunazuri.presentation.fragment.WelcomeFragment">

        <TextView
                style="@style/TextAppearance.AppCompat.Display2"
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                app:layout_marginTopPercent="24%"
                android:textColor="@color/white"
                android:text="@string/app_name"/>

        <TextView
                style="@style/TextAppearance.AppCompat.Subhead"
                android:id="@+id/text_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/text_title"
                android:textColor="@color/white"
                android:text="@string/text_app_headline"/>

        <android.support.v7.widget.AppCompatButton
                style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                app:layout_marginBottomPercent="12%"
                android:textAllCaps="false"
                android:text="@string/btn_login"
                android:onClick="@{handler.onBtnLoginClick}" />
    </android.support.percent.PercentRelativeLayout>
</layout>
