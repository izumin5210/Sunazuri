<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing"
                android:layout_marginEnd="@dimen/spacing"
                android:layout_marginBottom="@dimen/spacing"
                android:gravity="bottom"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/img_nav_header_icon_team"
                    android:layout_width="@dimen/drawer_header_icon_team"
                    android:layout_height="@dimen/drawer_header_icon_team"
                    tools:src="@mipmap/ic_launcher"/>

            <ImageView
                    android:id="@+id/img_nav_header_icon_user"
                    android:layout_width="@dimen/drawer_header_icon_user"
                    android:layout_height="@dimen/drawer_header_icon_user"
                    tools:src="@mipmap/ic_launcher"/>
        </LinearLayout>

        <TextView
                android:id="@+id/text_nav_header_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing"
                android:layout_marginStart="@dimen/spacing"
                android:layout_marginTop="@dimen/spacing_small"
                android:textSize="@dimen/text_small"
                android:textColor="@color/white"
                tools:text="example team" />

        <TextView
                android:id="@+id/text_nav_header_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing"
                android:layout_marginStart="@dimen/spacing"
                android:layout_marginTop="@dimen/spacing_small"
                android:textSize="@dimen/text_small"
                android:textColor="@color/white"
                tools:text="Masayuki Izumi" />
    </LinearLayout>
</layout>
